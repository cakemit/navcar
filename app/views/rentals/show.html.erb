<div class="container-show-rental">
  <div class="card">
    <%= render 'shared/car_details' %>
  </div>

  <div class="card" style="background-color: #f7f7ef">
    <div class="card-body">
      <h4 class="card-title"> Rental ID <%= @rental.id %></h4>
      <ul class="list-group">
        <li class=list-group-item><%= @rental.user.first_name %> <%= @rental.user.last_name %> </li>
        <li class=list-group-item>from <%= date_mask(@rental.start_date) %></li>
        <li class=list-group-item>to <%= date_mask(@rental.finish_date) %></li>
        <li class=list-group-item>Total amount: <%= price_mask_real(@price) %></li>
      </ul>
      <div class="card-body d-flex-inline">
        <% if policy(@rental).destroy? %>
          <%= link_to "Cancel", rental_path(@rental),
                                method: :delete,
                                data: { confirm: "Are you sure? Cancellation fees may apply", },
                                class: "btn btn-secondary flex-fill mx-1" %>
        <% end %>
      </div>
    </div>
  </div>
</div>