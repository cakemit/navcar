<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.jpeg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <%# ini signed-in %>
      <% if user_signed_in? %>
        <li class="nav-item font-weight-bold">
          <%= link_to "Browse cars", cars_path , class: "nav-link" %>
        </li>

        <li class="nav-item font-weight-bold">
          <%= link_to "My Reservations", rentals_path, class: "nav-link" %>
        </li>

        <li class="nav-item font-weight-bold">
          <%= link_to "Add car to rental", new_car_path, class: "nav-link" %>
        </li>

        <li class="nav-item dropdown">
          <%= cl_image_tag(@user.photo.key, crop: :thumb, gravity: :face, class:"avatar dropdown-toggle", id:"navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My cars", cars_path, class: "dropdown-item" %>
            <%= link_to "Edit account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: 'delete', class: "dropdown-item" %>
          </div>
        </li>
      <%# end signed-in %>
      <% else %>
        <li class="nav-item font-weight-bold">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
