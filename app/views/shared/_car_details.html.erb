<div class="card my-5">
  <%= image_tag 'logo', { class: "card-img-top" } %>
  <div class="card-body">
    <h3 class="card-title"> <%= @car.brand  %> <%= @car.model  %> </h3>
  </div>
  <ul class="list-group list-group-flush">
    <li class=list-group-item> Car year: <%= @car.year %> </li>
    <li class=list-group-item> Kms: <%= @car.km %> </li>
    <li class=list-group-item> <%= @car.city  %> </li>
    <li class=list-group-item> Daily rate: R$ <%= @car.daily_rate  %> </li>
  </ul>
  <div class="card-body d-flex">
    <% if policy(@car).show? %>
      <%= link_to "Book", new_car_rental_path(@car),
        class: "btn btn-flat flex-fill mx-1" %>
    <% end %>

    <% if policy(@car).edit? %>
      <%= link_to "Update", edit_car_path(@car),
        class: "btn btn-secondary flex-fill mx-1" %>
    <% end %>

    <% if policy(@car).destroy? %>
      <%= link_to "Remove", car_path(@car),
        method: :delete,
        data: { confirm: "Are you sure?", },
        class: "btn btn-secondary flex-fill mx-1" %>
    <% end %>
  </div>
</div> 