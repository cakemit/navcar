<div class="container my-4">
  <%= render "shared/map" %>
  <hr>
  <div class="d-flex justify-content-end">
    <%= form_tag off_road_cars_path,
    method: :get,
    class: "d-flex flex-row align-items-center",
    style: "width: 500px;" do %>
    <%= text_field_tag :user_address,
      params[:query],
      class: "form-control",
      placeholder: "Find a car by location"%>
    <%= submit_tag "Search", class: "btn btn-secondary ml-3" %>
  <% end %>

  </div>
  <nav class="nav nav-tabs flex-column flex-sm-row">
    <%= link_to "All cars", cars_path,
                class:"nav-link",
                style: "width: 100px; text-align: center;" %>
    <%= link_to "Luxury", luxury_cars_path,
                class:"nav-link",
                style: "width: 100px; text-align: center;" %>
    <%= link_to "Vintage", vintage_cars_path,
                class:"nav-link",
                style: "width: 100px; text-align: center;" %>
    <%= link_to "Sport", sport_cars_path,
                class:"nav-link",
                style: "width: 100px; text-align: center;" %>
    <%= link_to "Off-road", off_road_cars_path,
                class:"nav-link active",
                style: "width: 100px; text-align: center;" %>
  </nav>

  <%= render "shared/cars_list" %>

</div>
